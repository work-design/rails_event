<div class="box">
  <%= render 'filter_table' %>
</div>

<div class="columns">
  <div class="column">
    <div class="">
      <% @places.each do |place| %>
        <div class="media">
          <div class="media-left">
          </div>
          <div class="media-content">
            <%= link_to place.name, { action: 'show', id: place.id } %>
            <p><%= place.description %></p>
          </div>
          <div class="media-right">
            <%= link_to '加入购物车', { controller: 'trade/my/trade_items', action: 'create', good_id: place.id, good_type: place.class_name }, method: :post, class: 'button' %>
          </div>
        </div>
      <% end %>
    </div>

    <%= paginate @places %>
  </div>


  <div class="column is-narrow">
    <div class="ui segment">
      <div class="ui menu vertical">
        <div class="item"><%= link_to '申请为供应商', { action: 'new', place_taxon_id: params[:place_taxon_id] }, class: 'button is-link is-small' %></div>
      </div>
    </div>
  </div>
</div>

