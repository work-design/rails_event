<tr id="tr_<%= model.id %>" data-controller="show" data-action="mouseenter->show#show mouseleave->show#hide">
  <%= yield %>
  <td>
    <turbo-frame data-show-target="item" style="visibility: hidden">
      <%= link_to({ controller: 'seats', place_id: model.id }, data: { turbo_frame: '_top' }, aria: { label: t('event.admin.seats.index.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-regular fa-chair"></i>
      <% end %>
      <%= link_to({ action: 'show', id: model.id }, aria: { label: t('.show.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-circle-info"></i>
      <% end %>
      <%= link_to({ action: 'edit', id: model.id }, aria: { label: t('.edit.title') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-pencil"></i>
      <% end %>
      <%= button_to({ action: 'destroy', id: model.id }, method: :delete, aria: { label: t('.destroy.title') }, data: { turbo_confirm: t('.confirm') }, class: 'button is-small is-rounded is-light') do %>
        <i class="fa-solid fa-trash"></i>
      <% end %>
    </turbo-frame>
  </td>
</tr>
