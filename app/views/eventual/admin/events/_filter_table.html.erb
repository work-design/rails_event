<table class="as-search">
  <tr>
    <th><%= link_to Eventual::Event.human_attribute_name(:event_taxon_id), admin_event_taxons_path %></th>
    <td>
      <%= link_to t('.all'), filter_params(except: [:event_taxon_id]), class: active_params(event_taxon_id: '', active: 'button is-info', item: 'button is-light') %>
      <% @event_taxons.each do |taxon| %>
        <%= link_to taxon.name, filter_params(event_taxon_id: taxon.id), class: active_params(event_taxon_id: taxon.id, active: 'button is-info', item: 'button is-light') %>
      <% end %>
      <%= link_to new_admin_event_taxon_path, aria: { label: t('event.admin.event_taxons.new.title') }, class: 'button is-rounded is-light' do %>
        <i class="fa-light fa-plus"></i>
      <% end %>
    </td>
  </tr>
</table>

