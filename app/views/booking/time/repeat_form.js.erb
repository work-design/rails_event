<% form_object = default_form_object(@booking, on: { wrapper_all_id: true }) %>
<% if params[:repeat_type] == 'weekly' %>
  $('#<%= @booking.class.base_class.name.underscore %>_repeat_days_wrapper').replaceWith('<%= j(render partial: 'booking/time/weekly_checkboxes', locals: { f: form_object }) %>');
  $('#<%= @booking.class.base_class.name.underscore %>_start_at_wrapper').replaceWith('<%= j(render partial: 'booking/time/start_at', locals: { f: form_object }) %>');
  $('#<%= @booking.class.base_class.name.underscore %>_finish_at_wrapper').replaceWith('<%= j(render partial: 'booking/time/finish_at', locals: { f: form_object }) %>');
<% elsif params[:repeat_type] == 'monthly' %>
  $('#<%= @booking.class.base_class.name.underscore %>_repeat_days_wrapper').replaceWith('<%= j(render partial: 'booking/time/monthly_checkboxes', locals: { f: form_object }) %>');
  $('#<%= @booking.class.base_class.name.underscore %>_start_at_wrapper').replaceWith('<%= j(render partial: 'booking/time/start_at', locals: { f: form_object }) %>');
  $('#<%= @booking.class.base_class.name.underscore %>_finish_at_wrapper').replaceWith('<%= j(render partial: 'booking/time/finish_at', locals: { f: form_object }) %>');
<% elsif params[:repeat_type] == 'once' %>
  $('#<%= @booking.class.base_class.name.underscore %>_repeat_days_wrapper').replaceWith('<%= j(render partial: 'booking/time/once_date', locals: { f: form_object }) %>');
  $('#<%= @booking.class.base_class.name.underscore %>_start_at_wrapper').replaceWith('<%= j(render partial: 'booking/time/start_at_once', locals: { f: form_object }) %>');
  $('#<%= @booking.class.base_class.name.underscore %>_finish_at_wrapper').replaceWith('<%= j(render partial: 'booking/time/finish_at_once', locals: { f: form_object }) %>');
<% end %>
